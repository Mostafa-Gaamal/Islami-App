<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.QuranFragment">

    <ImageView
        android:id="@+id/logo_quran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/quran_screen_logo"
        android:layout_gravity="center_horizontal"

        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/elmasrri"
        android:padding="5dp"
        android:text="اسم السوره"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="end"
        tools:ignore="RtlCompat"
        android:layout_marginTop="225dp" />

    <TextView

        android:id="@+id/textView2"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:fontFamily="@font/elmasrri"
        android:padding="5dp"
        android:text="عدد الايات"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat"
        android:layout_marginTop="225dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#B6925F"
        android:layout_marginTop="225dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#B6925F"
        android:layout_marginTop="265dp" />

    <View
        android:layout_width="3dp"
        android:layout_height="40dp"
        android:background="#B6925F"
        android:layout_marginTop="225dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="1dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_quran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginTop="265dp"
        tools:listitem="@layout/quran_item" />


</FrameLayout>